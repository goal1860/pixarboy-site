# Root .htaccess - Protect parent directories
# This file should be placed in the root directory (above public_html)

# Deny all access to this directory
# Only public_html should be web-accessible
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

